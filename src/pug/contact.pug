doctype html
html(lang='en')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content)
        meta(name='author', content)

        title Modern Business - Start Bootstrap Template

        // Favicon
        link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

        // Font Awesome icons (free version)
        script(src='https://use.fontawesome.com/releases/v5.15.3/js/all.js', crossorigin='anonymous')

        // Core theme CSS (includes Bootstrap)
        link(href='css/styles.css', rel='stylesheet')

    body

        // Navigation
        include includes/navbar.pug

        // Page Content
        section.py-5
            .container

                // Page Heading/Breadcrumbs
                h1
                    | Contact
                    small Subheading
                ol.breadcrumb.mb-4
                    li.breadcrumb-item
                        a(href='index.html') Home
                    li.breadcrumb-item.active Contact

                // Content Row
                .row

                    // Map Column
                    .col-lg-8.mb-4
                        // Embedded Google Map
                        iframe(style='width: 100%; height: 400px; border: 0;' src='http://maps.google.com/maps?hl=en&ie=UTF8&ll=37.0625,-95.677068&spn=56.506174,79.013672&t=m&z=4&output=embed')

                    // Contact Details Column
                    .col-lg-4.mb-4
                        h3 Contact Details
                        p
                            | 3481 Melrose Place
                            br
                            | Beverly Hills, CA 90210
                            br
                        p
                            abbr(title='Phone') P
                            | : (123) 456-7890
                        p
                            abbr(title='Email') E
                            | :
                            a(href='mailto:name@example.com')
                                | name@example.com
                        p
                            abbr(title='Hours') H
                            | : Monday - Friday: 9:00 AM to 5:00 PM

                // Contact Form
                // In order to set the email address and subject line for the contact form go to the assets/mail/contact_me.php file.
                .row
                    .col-lg-8.mb-4
                        h3 Send us a Message
                        form#contactForm(name='sentMessage', novalidate)
                            .control-group.form-group
                                .controls
                                    label Full Name:
                                    input#name.form-control(type='text', required data-validation-required-message='Please enter your name.')
                                    p.help-block
                            .control-group.form-group
                                .controls
                                    label Phone Number:
                                    input#phone.form-control(type='tel', required data-validation-required-message='Please enter your phone number.')
                            .control-group.form-group
                                .controls
                                    label Email Address:
                                    input#email.form-control(type='email', required data-validation-required-message='Please enter your email address.')
                            .control-group.form-group
                                .controls
                                    label Message:
                                    textarea#message.form-control(rows='10', cols='100', required data-validation-required-message='Please enter your message', maxlength='999', style='resize:none')
                            #success
                            // For success/fail messages
                            button#sendMessageButton.btn.btn-primary(type='submit') Send Message
        // Footer
        footer.py-5.bg-dark
            .container
                p.m-0.text-center.text-white Copyright &copy; Your Website 2021

        // Bootstrap core JS
        script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js')

        // Core theme JS
        script(src='js/scripts.js')

        // Contact form JavaScript
        // Do not edit these files! In order to set the email address and subject line for the contact form go to the assets/mail/contact_me.php file.
        script(src='assets/mail/jqBootstrapValidation.js')
        script(src='assets/mail/contact_me.js')